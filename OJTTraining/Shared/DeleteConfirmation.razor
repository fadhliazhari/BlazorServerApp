<div class="modal fade show d-block" tabindex="-1" role="dialog">
    <div class="modal-backdrop fade show"></div>
    <div class="modal-dialog modal-dialog-centered" style="z-index: 1050">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Confirmation</h5>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" @onclick="Delete">Delete</button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }

    [Parameter] public string Message { get; set; } = "Are you sure you want to delete?";

    void Cancel()
    {
        ModalInstance?.CancelAsync();
    }

    void Delete()
    {
        ModalInstance?.CloseAsync(ModalResult.Ok(true));
    }
}